container_commands:
  load_env_vars:
        command: /opt/elasticbeanstalk/bin/get-config environment | jq -r 'to_entries | .[] | "export \(.key)=\"\(.value)\""' > /etc/profile.d/local.sh
  db_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate"
    leader_only: true
  populate_projects:
    command: "python3 manage.py populate_projects"
  populate_local_directory:
    command: "python3 manage.py populate_local_directory"

packages:
    yum:
        jq: []

option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: haritika_org.settings